---
const { title = "YourSite — Learn Anything", description = "A learning website skeleton built with Astro", } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossOrigin="anonymous" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body class="min-h-screen font-[Inter]">
    <header class="sticky top-0 z-50 backdrop-blur bg-[#0b1020]/70 border-b border-white/10">
      <div class="max-w-6xl mx-auto p-4 flex items-center justify-between">
        <a href="/" class="text-xl font-extrabold tracking-tight">YourSite</a>
       <nav class="flex gap-6 text-sm">
          <a class="hover:text-brand-300" href="/subjects/mathematics">Mathematics</a>
        </nav>
      </div>
    </header>
    <main class="max-w-6xl mx-auto p-6 md:p-10">
      <slot />
    </main>
    <footer class="border-t border-white/10 py-10 mt-10">
      <div class="max-w-6xl mx-auto px-6 md:px-10 text-sm text-[color:var(--muted)]">
        <div class="flex flex-wrap gap-4 justify-between">
          <p>© {new Date().getFullYear()} YourSite. Built with Astro.</p>
          <p class="flex items-center gap-4 text-xs">
            <a class="hover:text-brand-300" href="/about">About</a>
            <a class="hover:text-brand-300" href="/tags">Browse by tag</a>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
